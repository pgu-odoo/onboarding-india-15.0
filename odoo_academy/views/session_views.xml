<?xml version="1.0" encoding="utf-8"?> 

<odoo>
	<data>
		<record model="ir.ui.view" id="session_view_form">
			<field name="name">acadamy.session.form</field>
			<field name="model">acadamy.session</field>
			<field name="arch" type="xml">
				<form string="Session Form">
					<sheet>
						<h1><field name="name"/></h1>
						<group>
							<group>
								<field name="course_id"/>
								<field name="instructor_id"/>
							</group>
								<field name="start_date"/>
								<field name="end_date"/>
								<field name="duration"/>
							<group>
								<field name="instructor_id"/>
							</group>
							<group>
								<field name="student_id">Student</field>
							</group>
							
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="session_view_list">
			<field name="name">acadamy.session.list</field>
			<field name="model">acadamy.session</field>
			<field name="arch" type="xml">
				<tree string="Session list">
					<field name="name"/>
					<field name="instructor_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="session_view_calender">
			<field name="name">acadamy.session.calendar</field>
			<field name="model">acadamy.session</field>
			<field name="arch" type="xml">
				<calendar string="Session Calender"
					date_start="start_date"
					date_stop="end_date"
					color="instructor_id">
					<field name="name"/>
					<field name="instructor_id"/>
				</calendar>
			</field>
		</record>
	</data>
</odoo>
