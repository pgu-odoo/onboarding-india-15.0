<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="session_view_form" model="ir.ui.view">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type = 'xml'>
                <form string ='Session form'>
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <field name="course_id" />
                            </group>
                            <group>
                                <field name="instructor_id" />
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                            </group>
                            <notebook>
                                <page string="Student">
                                    <field name="student_ids" />
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="session_view_list" model="ir.ui.view">
            <field name="name">academy.session.list</field>
            <field name="model">academy.session</field>
            <field name="arch" type = 'xml' >
                <tree string = 'Session List'>
                    <field name="name" />
                    <field name = "instructor_id"/>
                </tree>

            </field>

        </record>

        <record id="session_view_calender" model="ir.ui.view">
            <field name="name">academy.session.calender</field>
            <field name="model">academy.session</field>
            <field name="arch" type = 'xml' >
                <calendar string="Session Calendar"
                        date_start="start_date"
                        date_stop="end_date"
                        color="instructor_id"
                        mode="month">
            
                <field name="name"/>
                <field name="instructor_id"/>
            </calendar>
            </field>
        </record>
    
    </data>
    

</odoo>
