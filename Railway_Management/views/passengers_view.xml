<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--FORM VIEW OF PASSENGERS-->
    <record id="passengers_view_form" model="ir.ui.view">
    <field name="name">passengers.view.form</field>
    <field name="model">railway.passenger</field>
    <field name="arch" type="xml">
        <form>
        <group colspan="4" col="4">
            <field name="seat_no"/>
            <field name="name"/>
            <field name="gender"/>
            <field name="age"/>
            <field name="source"/>
            <field name="destination"/>
            <field name="date_of_journey"/>
            <field name="Class"/>
            <field name="completed"/>
        </group>
        </form>
    </field>
    </record>

    <!--TREE VIEW OF PASSENGERS-->
    <record id="passengers_view_tree" model="ir.ui.view">
    <field name="name">passengers.view.tree</field>
    <field name="model">railway.passenger</field>
    <field name="arch" type="xml">
        <tree>
            <field name="seat_no"/>
            <field name="name"/>
            <field name="gender"/>
            <field name="age"/>
            <field name="source"/>
            <field name="destination"/>
            <field name="date_of_journey"/>
            <field name="Class"/>
        </tree>
    </field>
    </record>

    <!--ACTION OF PASSENGERS-->
    <record id="passengers_action" model="ir.actions.act_window">
            <field name="name">Passengers</field>
            <field name="res_model">railway.passenger</field>
            <field name="view_mode">tree,form</field>
    </record>

    <!--MENU OF PASSENGERS-->

     <menuitem id="railway_root"
                            name="Railway Management"/>

        <menuitem id="passengers_root"
                            name="Passengers"
                            action = 'passengers_action'
                            parent="railway_root"/>
</odoo>