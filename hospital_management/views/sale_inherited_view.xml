<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_inherited_form_view" model="ir.ui.view">
        <field name="name">sale.inherited.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                            <field name="discount_amount"/>
                            <field name="discount"/>
            </xpath>
        </field>
    </record>
</odoo>