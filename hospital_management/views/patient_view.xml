<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--FORM VIEW OF PATIENT MODEL-->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">view.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient Form">
                <header>
                    <field name="state" widget="statusbar"
                           clickable="1"/> <!--statusbar_visible="draft,done,confirm" , clickable=1-->
                    <button name="get_patient_bill"
                            string="Patient Bill"
                            type="object"
                            class="btn-primary"/>
                    <button name="test"
                            string="Test"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_Bill)d"
                                string="Bill"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-table"/>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>


                    <!--USED FOR RIBBON-->
                    <widget name="web_ribbon" title="Draft" bg_color="bg-warning"
                            attrs="{'invisible': [('state', '!=','draft')]}"/>
                    <widget name="web_ribbon" title="Confirm" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=','confirm')]}"/>
                    <widget name="web_ribbon" title="Done" bg_color="bg-success"
                            attrs="{'invisible':[('state', '!=','done')]}"/>
                    <widget name="web_ribbon" title="Dead" bg_color="bg-danger"
                            attrs="{'invisible': [('state', '!=','dead')]}"/>

                    <!--BASIC AND RELATIONAL FIELDS-->
                    <group colspan="4" col="4">
                        <field name="name" string="Patient Name" placeholder="Enter Your Name"/>
                        <field name="age"/>
                        <field name="gender" widget="radio"/>
                        <field name="dob"/>
                        <field name="status" widget="boolean_toggle"/>
                        <field name="weight"/>
                        <field name="address" placeholder="Enter Your detailed address"/>
                        <field name="contact_no"/>
                        <field name="email_id" widget="url" attrs="{'readonly' : [('state','=','dead')]}"/>
                        <field name="password" password="1"/>
                        <field name="al_contact_no" attrs="{'required' : [('contact_no','=','null')]}"/>
                        <field name="date_of_admit"/>
                        <field name="date_of_discharge"/>
                        <field name="doctor_ids" options="{'no_create':True}" widget="many2many_checkboxes"/>
                        <field name="disease"/>
                        <field name="file_name" invisible="1"/>
                        <field name="document" filename="file_name"/>
                        <field name="currency_id"/>
                        <field name="amount"/>
                        <field name="color" widget="color_picker"/>
                        <field name="ref_id"/>
                    </group>
                    <separator string="Description" placeholder="Enter if Any Notes"
                            attrs = "{'invisible' : [('status','=',False)]}"/>
                    <field name="note"  attrs = "{'invisible' : [('status','=',False)]}"/>
                    <notebook>
                        <page name="pg_bill" string="Bill Amount">
                            <field name="bill_ids"/>
                        </page>

                        <page name="pg_parent" string="Parent">
                            <field name="partner_ids"
                                    options="{'no_create':1,'no_open':1}"/>
                        </page>

                        <page name="pg_sequence" string="Sequence">
                            <field name="sequence"
                                    options="{'no_create':1,'no_open':1}"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- FOR ADDING CHATTER-->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                <footer>
                    <button name="create_record"
                        string="Create"
                        type="object"
                        class ="btn-success"
                        confirm="Are You Sure Want to Create a Record"/>
                    <button name="update_record"
                        string="Update"
                        type="object"
                        class ="btn-warning"
                        confirm="Are You Sure Want to Update the Record"/>
                    <button name="delete_record"
                            string="Delete"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure want to delete the record??"/>
                    <button name="copy_record"
                            string="Copy"
                            type="object"
                            class="btn-primary"/>
                    <button name="read_record"
                            string="Read"
                            type="object"
                            class="btn-primary"/>
                    <button name="search_record"
                            string="Search"
                            type="object"
                            class="btn-primary"/>
                    <button name="search_read_record"
                            string="Search_Read"
                            type="object"
                            class="btn-primary"/>
                    <button name="read_group_record"
                            string="Read_Group"
                            type="object"
                            class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!--TREE VIEW OF PATIENT MODEL-->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">view.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient_Tree" sample="1" default_order="name"
                                    decoration-warning="state=='draft'"
                                    decoration-info="state=='confirm'"
                                    decoration-muted="state=='dead'"
                                    decoration-it="state=='done'">
                <field name="name" string="Patient Name"/>
                <field name="doctor_ids"/>
                <field name="age" avg="Average Age"/>
                <field name="sequence" widget="handle"/>
                <field name="dob" optional="show"/>
                <field name="gender" optional="hide"/>
                <field name="date_of_admit"/>
                <field name="date_of_discharge"/>
                <field name="disease"/>
                <field name="activity_ids"/>
                <field name="state"/>
                <field name="amount" sum="Total Amount"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>


    <!--KANBAN VIEW OF PATIENT MODEL-->
    <record id="view_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban string="Patient_Kanban">
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="partner_ids"/>
                <field name="color"/>
                <field name="gender"/>
                <field name="date_of_admit"/>
                <templates>
                    <!--CREATING A KANBAN CARD -->
                    <t t-name="kanban-box">
                        <!--MAKING THE CARD CLICKABLE AND HAVING THE IMAGE-->
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_card oe_kanban_global_click o_kanban_has_image_fill">
                            <div>
                                <!--ADDING AN IMAGE-->
                                <field name="image" widget="image" class="oe_avatar" height="200" width="200"
                                       background-color="blue"/>
                            </div>
                            <span class="pull-left text-left" style="font-size:13px; color:black; font-weight: bold;">
                                <ul>
                                    <li>
                                        Patient Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Age:
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        Date:
                                        <field name="date_of_admit"/>
                                    </li>
                                </ul>
                            </span>
                            <!--ADDING A DROPDOWN ON KANBAN CARD-->
                            <div class="o_dropdown_kanban o_dropdown">
                                <!-- GETTING AN ICON OF ELLIPSIS TO HAVE THE DROPDOWN MENU-->
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                   data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <!-- TYPE="OPEN" IS USED TO OPEN THE FORM VIEW IN NON EDITABLE MODE-->
                                    <a role="menuitem" type="open" class="dropdown-item">Open</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <!--TYPE="EDIT" IS USED TO OPEN THE FORM VIEW IN EDITABLE MODE-->
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <div role="separator" class="dropdown-divider"/>
                                    <!--USING ANCHOR TAG AS BUTTON OF OBJECT TYPE TO CALL A METHOD-->
                                    <a role="menuitem" type="object" name="update_record" class="dropdown-item">Update</a>
                                    <div role="separator" class="dropdown-divider"/>
                                    <!-- TYPE="DELETE" IS USED TO DELETE THE RECORD -->
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <!--ADDING SEPARATOR-->
                                    <div role="separator" class="dropdown-divider"/>
                                    <!--COLOR PICKER ON THE KANBAN VIEW-->
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--SEARCH VIEW OF PATIENT MODEL-->
    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">view.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patient_Search">
                <field name="name"/>
                <field name="dob"/>
                <field name="doctor_ids"/>
                <field name="age"/>
                <field name="gender"/>
                <!--FILTERING RECORD USING CONTEXT-->
                <filter name="by_gender" string="Gender"
                        context="{'group_by':'gender'}"/>
                <filter name="by_age" string="Age"
                        context="{'group_by':'age'}"/>
                <!--FILTERING RECORD USING DOMAIN-->
                <filter name="male_filter"
                        string="Male"
                        domain="[('gender','=','male')]"/>
                <!--ADDING SEPARATOR TO ADD LINE BETWEEN FILTERS-->
                <separator name="filter_sep_1"/>
                <filter name="female_filter"
                        string="Female"
                        domain="[('gender','=','female')]"/>
                <separator name="filter_sep_1"/>
                <!--FILTER OF DATE-->
                <filter name="dob_filter"
                        string="Birth Date"
                        date="dob"/>
                <!--FOR CREATING SEARCH PANEL-->
                <searchpanel>
                    <field name="gender" icon="fa-users"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- CALENDAR VIEW OF PATIENT MODEL-->
    <record id="view_patient_calendar" model="ir.ui.view">
        <field name="name">view.patient.calendar</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <calendar string="Patient_Calender" date_start="date_of_admit"
                      date_stop="date_of_discharge"
                        color="gender">
                <field name="name"/>
                <field name="gender" filters="1"/>
                <field name="state" filters="1"/>
            </calendar>
        </field>
    </record>

    <!--GRAPH VIEW OF PATIENT MODEL-->
    <record id="view_patient_calendar" model="ir.ui.view">
        <field name="name">view.patient.calendar</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <graph string="Patient_Graph">
                <field name="gender" type="row"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!--PIVOT VIEW OF PATIENT MODEL-->
    <record id="view_patient_pivot" model="ir.ui.view">
        <field name="name">view.patient.pivot</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="dob" type="row" interval="week"/>
                <field name="gender" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

