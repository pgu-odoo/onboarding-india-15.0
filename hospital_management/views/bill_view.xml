<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <!--FORM VIEW OF BILL MODEL-->
    <record id="view_bill_form" model="ir.ui.view">
        <field name="name">hospital.bill.form</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <form string="Bill_Form">
                <sheet>
                    <header>
                        <field name="image" widget="image" height="100" width="100"/>
                    </header>
                    <group colspan="3" col="3">
                            <field name="no" string="Bill No."/>
                            <field name="p_name" string="Patient_Name"/>
                            <field name="doctor_charges"/>
                            <field name="medicine_charges"/>
                            <field name="room_charge"/>
                            <field name="operation_charge"/>
                            <field name="nursing_charge"/>
                            <field name="total" widget="progressbar"/>
                            <field name="note"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--TREE VIEW OF BILL MODEL-->
    <record id="view_bill_tree" model="ir.ui.view">
        <field name="name">hospital.bill.tree</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <tree sample="1" string="Bill_Tree">
                            <field name="no" string="Bill No."/>
                            <field name="p_name" string="Patient_Name"/>
                            <field name="doctor_charges"/>
                            <field name="medicine_charges"/>
                            <field name="room_charge"/>
                            <field name="operation_charge"/>
                            <field name="nursing_charge"/>
                            <field name="total"/>
            </tree>
        </field>
    </record>

    <!--GRAPH VIEW OF BILL MODEL-->
    <record id="view_bill_graph" model="ir.ui.view">
            <field name="name">view.bill.graph</field>
            <field name="model">hospital.bill</field>
            <field name="arch" type="xml">
                    <graph type="pie"> <!--editable=bottom-->
                            <field name="p_name" type="row"/>
                            <field name="total" type="col"/>
                    </graph>
            </field>
    </record>

    <!--PIVOT VIEW OF BILL MODEL-->
    <record id="view_bill_pivot" model="ir.ui.view">
        <field name="name">view.bill.pivot</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="p_name" type="row"/>
                <field name="total" type="col"/>
            </pivot>
        </field>
    </record>


    <!-- ACTION MENU OF BILL MODEL -->
    <record id="action_Bill" model="ir.actions.act_window">
            <field name="name">Bill</field>
            <field name="res_model">hospital.bill</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="help" type="html">
                <p>
                    Create Bill
                </p>
            </field>
    </record>

     <!--MENU OF BILL MODEL-->
    <menuitem id="menu_bill_root"
              name="Bill"
              parent="hospital_root"/>

    <menuitem id="menu_bill"
              name="Bills"
              parent="menu_bill_root"
              action="action_Bill"/>

</odoo>