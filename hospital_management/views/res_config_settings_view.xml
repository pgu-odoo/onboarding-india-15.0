<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--INHERITED VIEW OF SETTINGS TO ADD HOSPITAL SECTION-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="hospital_management" string="Hospital setting" data-key="hospital" groups="hospital_management.hospital_admin_grp"/>
                <h2>Patient Configuration</h2>
                <div class="row mt 16 o_settings_container" name="patient_container">
                    <div class="col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"/>
                            <label for="def_patient_amount"/>
                            <field name="def_patient_amount"/>
                            <div class="text-muted">
                                Default amount set for patients of company
                            </div>
                    </div>
                </div>

                <div class="col-lg-6 o_setting_box">
                    <div class="o_settings_left_pane"/>
                    <div class="o_settings_right_pane"/>
                        <label for="def_patient_amount2"/>
                        <field name="def_patient_amount2"/>
                        <div class="text-muted">
                            Default Amount Set For Patients Of complete system ans for all companies
                        </div>
                </div>

                <div class="col"
            </xpath>
        </field>
    </record>
</odoo>