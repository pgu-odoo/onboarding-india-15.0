<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <report
            id="report_patient"
            model="hospital.patient"
            string="Patient Report"
            name="hospital_management.report_patient_document"
            file="hospital_management.report_patient"
            report_type="qweb-html"/>

    <template id="report_patient_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name" class="mt16"/>
                        <div class="row mt32 mb32" id="patient_info">
                            <div class="col-auto mw-100 mb-2">
                            <strong>Patient Name:</strong>
                                <t t-if="doc.name">
                                     <span t-field="doc.name"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>

    </template>
</odoo>