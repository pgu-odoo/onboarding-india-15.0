<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<report 
		id="report_session"
		model="open_nstitue.session"
		string="Session Report"
		name="open_institue.report_session_document"
		file="open_institute.report_session"
		report_type="qweb-html"/>

	<template id="report_session_document">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="doc">
				<t t-call="web.external_layout">
						<div class="page">
							<h2 t-field="doc.name
							" class="mt16"/>
							<div class="row mt32 mb32" id="session_info">
								<div class ="col-auto mw-100 mb-2">
									<strong>Session Duration</strong>
									<t t-if="doc.start_date"/>
									</t>
									to
									<t t-if="doc.end_date">
										<span t-field="doc.end_date"/>
									</t>
								</div>
								<div t-if="doc.instuctor_id" class="col-auto mw-100 mb-2">
									<strong>Instructor	</strong>
									<span t-field="doc.instuctor_id.name"/>
								</div>
							</div>
							<h4>Students</h4>
							<table class="table table-sm o_main_table">
								<thead>
									<tr>
										<th name="th_name">Name</th>
										<th name="th_phone">Phone</th>
										<th name="th_email">Email</th>
									</tr>
								</thead>
								<tbody>
									<t t-foreach ="doc.student_ids" t-as="student">
										<tr>
											<td t-if="student.name" name="td_name">
												<span t-field="student.name"/>
											</td>
											<td t-if="student.phone" nam="td_phone">
												<span t-field="student.phone"/>
											</td>
											<td t-if="student.email" name="student.email">
											<span t-field="student.email"/>
											</td>
										</tr>
									</t>
								</tbody>
						</table>
					</div>
				</t>
			</t>
		</t>
	</template>										
</odoo>