<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="institute_sale_from_wizard_form_view">
			<field name="name">institute.sale.wizard.form</field>
			<field name="model">institute.wizard.sale</field>
			<field name="arch" type="xml">
				<form string="Create Sale Order For Session">
					<group>
						<field name="session_ids"/>
						<field name="session_student_ids" invisible="1"/>
						<field name="student_ids" domain="[('id','in','session_student_ids')]">
					</group>
					<footer>
						<button name="create_sale_order" type="object" string="Create" class="oe_highlight"/>
						or
						<button special="cancel" string="Cancel"/>
					</footer>
				</form>
			</field>
		</record>
		<act_window id="launch_sale_wizard" name="create_sale_order" binding_model="institute.session" res_model="institute.sale.wizard" view="form" target="new"/>
	</data>
</odoo>