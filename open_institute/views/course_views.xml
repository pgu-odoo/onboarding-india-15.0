<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="course_view_form">
			<field name="name">institute.course.form</field>
			<field name="model">institute.course</field>
			<field name="arch" type="xml">
				<form string="Course Form">
					<sheet>
						<h1><field name="name"/></h1>
						<div>
						<group>
							<group>
								<field name="active"/>
							</group>
							<group>
								<field name="level"/>
							</group>
						</group>
					</div>
					<div>
						<notebook>
							<page string="Description">
							     <field name="description"/>	
							</page>
						</notebook>
					</div>	
					</sheet>
				</form>
			</field>
			
		</record>
		<record model="ir.ui.view" id="course_view_list">
			<field name="name">institute.course.list</field>
			<field name="model">institute.course</field>
			<field name="arch" type="xml">
				<tree string="Course List">
					<field name="name"/>
					<field name="description"/>
					<field name="level"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="course_view_search">
			<field name="name">institute.course.search</field>
			<field name="model">institute.course</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="description"/>
				</search>
			</field>
		</record>	
	</data>
</odoo>