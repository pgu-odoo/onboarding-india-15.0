<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="session_view_form">
			<field name="name">institute.session.form</field>
			<field name="model">institute.session</field>
			<field name="arch" type="xml">
				<form string="Session Form">
					<sheet>
						<h1><field name="name"/></h1>
						<group>
							<group>
								<field name="course_id"/> 
							</group>
							<group>
								<field name="instructor_id"/> 
							</group>
							<notebook>
								<page string="Students">
									<field name="student_ids"/>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		 <record model="ir.ui.view" id="session_view_list">
		 	<field name="name">institute.session.list></field>
		 	<field name="model">institute.session</field>
		 	<field name="arch" type="xml">
		 		<tree string="Session List">
		 			<field name="name"/>
		 			<field name="instructor_id"/>
		 		</tree>
		 	</field>
		 </record>
	</data>
</odoo>