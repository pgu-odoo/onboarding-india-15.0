<!--it is a search view 	-->

	<record id="course_view_search" model="ir.ui.view"> <!--we are create a form views into this model (ir.ui.view)-->
		<field name="name">academy.course.search</field>  
		<field name="model">academy.course</field>   <!--we are going to create form view for this mode --><!--we can use this models fields inside the form tag-->
		<field name="arch" type="xml"> 

			<search string="course">	
				 <field name="name"/>
				 <field name="description"/>
				 <field name="level"/>
				 <separator/>

				 <filter string="Filter for Beginner" name="Beginner" domain="[('level', '=', 'beginner')]"/> <!--if u use default by filter use name filed-->
				 <filter string="Filter for Intermediate" name="Intermediate" domain="[('level', '=', 'intermediate')]"/>
				 <filter string="Filter for Advanced" name="Advanced" domain="[('level', '=', 'advanced')]"/>


				 <group expand="1" string="Group By">
				 	<filter string="level" name="level" context="{'group_by':'level'}"/>     <!--if u use default by filter use name filed-->
				 	<filter string="course name" name="name" context="{'group_by':'name'}"/>	
				 </group>

			</search>

		</field>  
		
	</record>
