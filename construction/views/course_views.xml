<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<record id="course_view_form" model="ir.ui.view"> <!--we are create a form views into this model (ir.ui.view)-->
		<field name="name">academy.course.form</field>  
		<field name="model">academy.course</field>   <!--we are going to create form view for this mode --><!--we can use this models fields inside the form tag-->
		<field name="arch" type="xml"> 

			<form string="course form">  <!--odoo will understand its form view using <form>-->
				<sheet> <!--for getting a sheet in backgroud -->
					<h2>
						<field name="name" string="Name"/>
					</h2 > <!--name="name" use from models "academy.course"-->

					<group>	<!--main group-->
						<group> <!--for getting a label for corresponding fields -->
							<field name="active"/>
							<field name="level"/>
							<field name="lecture_date"/>
							<field name="lecture_starttime"/>
							<field name="lecture_endtime"/>
							<field name="duration"/>
						</group>

						<!--taking a two group for split form -->

						<group>
							<field name="base_price"/>
							<field name="additional_fee"/>
							<field name="total_price"/>
							<field name="subjects"/>
						</group>
					</group>

					<notebook>   <!--position="inside,position="before,position="after,"-->
						<page string="Description">		 
							<field name="description"/>
						</page>
						<page string="Subject">
							<field name='add_subject_ids' string="Subject">
								<tree>
									<field name='subject'/>
									<field name='book'/>
								</tree>
								<!-- <form>
									<group>
										<field name='subject'/>
										<field name='book'/>
									</group>
								</form> -->
							</field>
						</page>
					</notebook>
				</sheet>
			</form>

		</field>  
		
	</record> 


<!--it is a list or tree view 	-->

	<record id="course_view_tree" model="ir.ui.view"> <!--we are create a form views into this model (ir.ui.view)-->
		<field name="name">academy.course.tree</field>  
		<field name="model">academy.course</field>   <!--we are going to create form view for this mode --><!--we can use this models fields inside the form tag-->
		<field name="arch" type="xml"> 

			<tree default_order="name desc">
				 <field name="active"/>
				 <field name="level"/>
				 <field name="name"/>
				 <field name="description"/>
			</tree>

		</field>  
		
	</record>


