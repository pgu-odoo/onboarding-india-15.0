<!--it is a calendar view 	-->

	<record id="course_view_calendar" model="ir.ui.view">
        <field name="name">academy.course.calendar</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <calendar date_start="lecture_starttime" date_stop="lecture_endtime" mode="month" string="TIME TABLE" color="level">
          			
                <field name="level"/>
                <field name="name"/>
            </calendar>
        </field>
    </record>


<!--it is a pivot view 	-->

	<record id="course_view_pivot" model="ir.ui.view">
        <field name="name">academy.course.pivot</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <pivot  string="time table">
            	
				<field name="level" type="row"/>    <!--type=row, type=col,interval=day,month, (by default view)-->
				<field name="name" type="row"/>
				<field name="base_price" type="measure"/>
                
            </pivot>
        </field>
    </record>


<!--it is a graph view 	-->

	<record id="course_view_graph" model="ir.ui.view">
        <field name="name">academy.course.graph</field>
        <field name="model">academy.course</field>
        <field name="arch" type="xml">
            <graph  string="this is graph view" type="pie">       <!--by default show as pie chart (type="pie") --> 
          
                <field name="name"/>   
                <field name="base_price" type="measure"/>		
            </graph>
        </field>
    </record>


