<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='show_margins']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="loyalty_points_view">
                    <div class="o_setting_right_pane">
                        <span class ="o_form_label">Loyalty Points</span>
                        <div class ="content-group">
                            <div class ="text-muted mb8">
                                Manage a Loyalty Points
                            </div>
                            <label for="loyalty_points" string="Points" class="col-lg-3 o_light_label"/>
                            <field name ="loyalty_points"/>
                        </div>
                        <div class ="content-group">
                            <label for="value_for_every_point" string="Value" class="col-lg-3 o_light_label"/>
                            <field name ="value_for_every_point"/>
                        </div>
                        <div class ="content-group">
                            <label for="product" string="product" class="col-lg-3 o_light_label"/>
                            <field name ="product"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
