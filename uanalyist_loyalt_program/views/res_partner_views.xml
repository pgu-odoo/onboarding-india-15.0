<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" type="object" name="open_partner_transactions"
                            groups="sales_team.group_sale_salesman"
                            icon="fa-usd">
                        <field string="Points" name="partner_points" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="rank_type" readonly="1"/>
                    <field name="partner_balance_points" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
