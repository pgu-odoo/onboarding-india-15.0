<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.points</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@class='oe_subtotal_footer oe_right']/field" position="before">
                <div class="oe_right">
                    <button name="sale_invoice_point_redemption1" class="btn btn-secondary" string="Redemption" type="object" attrs="{'invisible':[('state', '==', 'posted')]}"/>
                    <button name="clear_points" class="btn btn-secondary" string="clear_points" type="object"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
