<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="redemption_form_view" model="ir.ui.view">
            <field name="name">loyalty.redemption.transaction</field>
            <field name="model">loyalty.redemption.transaction</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" invisible="1"/>
                                <field name="points" readonly="1"/>
                                <field name="balance" readonly="1"/>
                            </group>
                            <group>
                                <field name="redemption_value"/>
                            </group>
                        </group>
                        <footer>
                        <button string="Create Redemption" name="action_create_redemption" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="loyalty_redemption_transaction_action" model="ir.actions.act_window">
            <field name="name">Redemption</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loyalty.redemption.transaction</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
