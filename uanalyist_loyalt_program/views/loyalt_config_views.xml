<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="configuration_form_view" model="ir.ui.view">
            <field name="name">loyalty.program.config</field>
            <field name="model">loyalty.program.config</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="based_on_state"/>
                                <field name="role"/>
                            </group>
                            <group>
                                <field name="active" widget='boolean_toggle'/>
                                <field name="company_currency_id" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="min_order_value" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                                <field name="point_earned_on_criteria"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="configuration_tree_view" model="ir.ui.view">
            <field name="name">loyalty.program.config</field>
            <field name="model">loyalty.program.config</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="active" widget='boolean_toggle'/>
                </tree>
            </field>
        </record>

        <record id="configuration_action" model="ir.actions.act_window">
            <field name="name">Loyalty Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loyalty.program.config</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
