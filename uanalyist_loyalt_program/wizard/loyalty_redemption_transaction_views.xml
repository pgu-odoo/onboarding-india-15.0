<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="loyalty_redemption_transaction_wizard_form_view" model="ir.ui.view">
            <field name="name">loyalty.redemption.transaction.form</field>
            <field name="model">loyalty.redemption.transaction.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="points"/>
                        </group>
                        <footer>
                            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                            <button string="Redemption" name="action_create_redemption1" type="object" class="btn btn-secondary"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="loyalty_redemption_transaction_wizard_action" model="ir.actions.act_window">
            <field name="name">Redemption</field>
            <field name="res_model">loyalty.redemption.transaction.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="loyalty_redemption_transaction_wizard_form_view"></field>
			<field name="target">new</field>
        </record>
    </data>
</odoo>
