<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_deactived" model="ir.cron">
        <field name="name">auto deactivated loyalty program</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_loyalty_program_config"/>
        <field name="code">model.auto_deactivated_loyalty_program()</field>
        <field name="state">code</field>
    </record>
</odoo>
