<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="doctor_id" attrs="{'invisible': [('move_type', '=', 'in_invoice')]}"/>
            </xpath>
            <xpath expr="//group[@class='oe_subtotal_footer oe_right']/field" position="before">
                <div class="oe_right">
                    <button name="sale_invoice_point_redemption" class="btn btn-secondary" string="Redemption"
                            type="object" attrs="{'invisible':[('state', '==', 'posted')]}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
