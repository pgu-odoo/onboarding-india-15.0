<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="loyalty_program_transaction_form" model="ir.ui.view">
            <field name="name">loyalty.program.transaction.form</field>
            <field name="model">loyalty.program.transaction</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="date"/>
                                <field name="sale_invoice_id"/>
                            </group>
                            <group>
                                <field name="points"/>
                                <field name="adds"/>
                                <field name="redemption"/>
                                <field name="balance"/>
                                <field name="operation_type"/>
                            </group>
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="loyalty_program_transaction_tree" model="ir.ui.view">
            <field name="name">loyalty.program.transaction.tree</field>
            <field name="model">loyalty.program.transaction</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="adds"/>
                    <field name="redemption"/>
                    <field name="balance"/>
                    <field name="operation_type"/>
                    <field name="sale_invoice_id"/>
                </tree>
            </field>
        </record>

        <record id="loyalty_transaction_action" model="ir.actions.act_window">
            <field name="name">Loyalty Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loyalty.program.transaction</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
