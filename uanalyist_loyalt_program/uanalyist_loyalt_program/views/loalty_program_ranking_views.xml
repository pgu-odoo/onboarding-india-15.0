<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="loyalty_program_ranking_form" model="ir.ui.view">
            <field name="name">loyalty.program.ranking.form</field>
            <field name="model">loyalty.program.ranking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="active"/>
                                <field name="rank_type"/>
                                <field name="starting_points"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="loyalty_program_ranking_tree" model="ir.ui.view">
            <field name="name">loyalty.program.ranking.tree</field>
            <field name="model">loyalty.program.ranking</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="rank_type"/>
                    <field name="starting_points"/>
                </tree>
            </field>
        </record>

        <record id="ranking_action" model="ir.actions.act_window">
            <field name="name">Ranking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loyalty.program.ranking</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
