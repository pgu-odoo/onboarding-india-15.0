<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Available Properties</t>
            <div class="oe_structure">
                <div class="container p-3">
                    <h3>Available Properties</h3>
                    <hr />
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 p-2 mt-1 mb-2">
                                <div class="m-1" t-att-style="(not property.is_published and 'background-color: rgba(0, 0, 0, 0.1)' or '')" t-att-class="(not property.active and 'mask' or '') + 'm-1'">
                                    <div class="d-flex justify-content-center">
                                        <div t-field="property.image" t-options="{'widget' : 'image', 'size': ['100px', '50px'], 'width': '10px'}" width="10px" class="new col-md-9" style="width:100%"></div>
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-center">
                                        <a t-attf-href="/estate/{{ slug(property) }}">
                                            <h3><span t-field="property.name"></span> <span t-if="not property.is_published" class="text-danger"><i class="fa fa-eye-slash"></i></span></h3>
                    
                                        </a>
                                    </div>
                                    <!-- <div t-field="property.description"></div> -->
                                    <div class="row">
                                        <div class="col-md-6 text-center">
                                            <p>
                                                Available From<br />
                                                <b t-field="property.date_availability" t-options='{"format": "long"}'></b>
                                            </p>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <p>
                                                Available To<br />
                                                <b t-field="property.date_deadline" t-options='{"format": "long"}'></b>
                                            </p>
                                        </div>
                                    </div>
                                    <hr />
                                    <footer class="pl-3 pb-2">
                                        <p>
                                            Last Modified :
                                            <b t-field="property.write_date" t-options='{"widget": "relative"}'></b>
                                        </p>
                                    </footer>
                                </div> 
                            </div>
                        </t>
                    </div>
                    <div class="products_pager form-inline justify-content-center mt-3">
                        <t t-call="website.pager">
                        <t t-set="_classes">mt-2 ml-md-2</t>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="description_property" inherit_id="estate.property_details" customize_show="True" name="Description">
        <xpath expr="//*[hasclass('myclass')]" position="inside">
            <div class="oe_subdescription" contenteditable="false">
                <h5 class="mt-2">Description</h5>
                <hr />
                <div itemprop="description" t-field="property.description"></div>
            </div>
        </xpath>
    </template>

    <template id="property_details">
        <t t-call="website.layout">
            <t t-set="title">Property Details</t>
            <div class="oe_structure">
                <div class="container p-3 shadow-lg mt-4 mb-4 p-3 mb-5 bg-white rounded">
                    <t t-foreach="property" t-as="prop">
                        <div id="website_published_button" class="float-right">
                            <t t-call="website.publish_short">
                            <t t-set="object" t-value="property"/>
                            <t t-set="publish_edit" t-value="True"/>
                            <t t-set="action" t-value="'estate.real_estate_action'"/>
                            </t>
                        </div>
                        <header class="pl-2">
                                <h1 t-field="prop.name"></h1>
                        </header>
                        <hr />
                        <div class="section row">
                            <div class="col-md-8 ">
                                <div class="row ">
                                    <div class="col-md-6 ">
                                        <p>
                                            Date Available From:
                                            <b t-field="prop.date_availability" t-options='{"format": "long"}'></b>
                                        </p>
                                    </div>
                                    <div class="col-md-6 ">
                                        <p>
                                            Date Available To :
                                            <b t-field="prop.date_deadline" t-options='{"format": "long"}'></b>
                                        </p>
                                    </div>
                                </div>
                                <div class="row ">
                                    
                                    <div class="col-md-12 myclass ">
                                    </div>
                                </div>
                            </div>
                            <div t-field="prop.image" t-options="{'widget' : 'image','size' : ['100px','100px']}" class="col-md-4  aside"></div>
                        </div>            
                        <hr />
                        <footer>
                            <p>
                                Last Modified :
                                <b t-field="prop.write_date" t-options='{"widget": "relative"}'></b>
                            </p>
                        </footer>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>