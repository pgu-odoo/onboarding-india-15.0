<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="real_estate_action" model="ir.actions.act_window">
		<field name="name">Properties</field>
		<field name="res_model">estate.property</field>
		<field name="view_mode">tree,form,kanban</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Add your property over here
			</p>
		</field>
	</record>

	<record id="property_type_action" model="ir.actions.act_window">
		<field name="name">Property Types</field>
		<field name="res_model">estate.property.type</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="property_offer_action" model="ir.actions.act_window">
		<field name="name">Property Offers</field>
		<field name="res_model">estate.property.offer</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="stat_property_offer_action" model="ir.actions.act_window">
		<field name="name">Property Offers</field>
		<field name="res_model">estate.property.offer</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[('property_type_id','=',active_id)]</field>
	</record>

	<record id="property_tag_action" model="ir.actions.act_window">
		<field name="name">Property Tags</field>
		<field name="res_model">estate.property.tag</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- <record id="odoo_redirect_action" model="ir.actions.act_url">
		<field name="name">Odoo Website</field>
		<field name="url">https://www.odoo.com</field>
		<field name="target">new</field>
	</record> -->


	<menuitem 
		id="real_estate_menu_root" 
		name="Real Estate" 
		sequence="1" />

	<!-- Advertisment -->
	<menuitem 
		id="real_estate_menu_sub" 
		name="Advertisment" 
		parent="real_estate_menu_root"
		sequence="1" />

	<menuitem 
		id="real_estate_menu_action"
		name="View properties"
		action="real_estate_action" 
		parent="real_estate_menu_sub"
		sequence="1" />

	<menuitem
		id="real_estate_settings"
		name="Settings"
		parent="real_estate_menu_root"
		sequence="2" />

	<menuitem
		id="proeprty_type_menu"
		name="Property Types"
		action="property_type_action"
		parent="real_estate_settings"
		sequence="1" />

	<menuitem
		id="proeprty_tag_menu"
		name="Property Tags"
		action="property_tag_action"
		parent="real_estate_settings"
		sequence="2" />

	<menuitem
		id="proeprty_offer_menu"
		name="Property Offers"
		action="property_offer_action"
		parent="real_estate_settings"
		sequence="3" />

