<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">Property Type Tree View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Types List">
                <field name="name"></field>
                <field name="sequence" widget="handle" />
            </tree>
        </field>
    </record>

    <record id="estate_property_type_form" model="ir.ui.view">
        <field name="name">Property Type Form View</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(stat_property_offer_action)d"
                                type="action" icon="fa-bars">
                            <div class="o_stat_info">
                                <span class="o_stat_value"> 
                                    <field name="offer_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Offer Count
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <h1><field name="name"></field></h1>
                            <!-- <field name="offer_count" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="expected_price" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree>
                                    <field name="property_id" />
                                    <field name="partner_id" />
                                    <field name="price" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>