<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="estate_property_tag_tree" model="ir.ui.view">
        <field name="name">Property Tags Tree View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags List">
                <field name="name"></field>
                <field name="tag_ids">
                    <tree>
                        <field name="name"></field>
                    </tree>
                </field>
                <field name="color"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_tag_form" model="ir.ui.view">
        <field name="name">Property Tags Form View</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tags Form">
                <sheet>
                    <group> 
                        <field name="name"></field>
                    </group>
                    <newline />
                    <group> 
                        <field name="tag_ids"></field>
                    </group>
                    <group> 
                        <field name="color" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>