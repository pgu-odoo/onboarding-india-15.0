<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="estate_property_offer_search" model="ir.ui.view">
        <field name="name">Property Offers Search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search string="_('Property Offer Search View')">
                <field name="property_id"></field>
                <field name="partner_id"></field>
                <field name="property_type_id" widget="selection"></field>
                <field name="price"></field>
                <field name="status"></field>

                <filter name="acccepted_offers_filter" string="Accepted Offers" domain="[('status','=','accepted')]" />
				<separator/>
                <filter name="high_price_properties" string="High Price Properties" domain="[('price','>','1000000')]" />

                <filter name="group_by_property_type" string="Property Type" context="{'group_by' : 'property_type_id'}" />
            </search>
        </field>
    </record>
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">Property Offer Tree View</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="property Offer List">
                <field name="property_id"></field>
                <field name="property_type_id" string="Property Type"></field>
                <field name="partner_id"></field>
                <field name="price"></field>
                <field name="status"></field>
            </tree>
        </field>
    </record>

