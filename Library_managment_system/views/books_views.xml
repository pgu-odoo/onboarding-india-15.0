<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record id="books_view_form" model="ir.ui.view">
            <field name="name">books.name</field>
            <field name="model">library.books</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active" string="Active"/>
                                <field name="level"/>  
                            </group>
                        </group>
                        <group>
                        <notebook>
                            <page string="Description">
                                <field name="description" />
                            </page>
                        </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="books_view_list" model="ir.ui.view">
            <field name="name">library.books.list</field>
            <field name="model">library.books</field>
            <field name="arch" type='xml'>
                <tree string="books list">
                    <field name="name" />
                    <field name="description" />
                    <field name="level" />
                </tree>
            </field>
        </record>

        <record id="books_view_search" model="ir.ui.view">
            <field name="name" >library.books.search</field>
            <field name = "model">library.books</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record> 


        <record model="ir.actions.act_window" id="books_list_action">
            <field name="name">bookss</field>
            <field name="res_model">library.books</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type='html'>
                <p class="o_view_nocontent_smiling_face">
                    Create first books
                </p>
            </field>
        </record>
    </data>

        <menuitem
            id="menu_library"
            name="Odoo library"
            sequence="1"/>

        <menuitem
            id="menu_library_sub"
            name="Odoo library"
            sequence="2"
            parent="menu_library"
            />
        <menuitem
            id="menu_library_bookss"
            name="bookss"
            sequence="3"
            parent="menu_library_sub"
            action="books_list_action"
            />    

</odoo>
