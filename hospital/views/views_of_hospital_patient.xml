<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<record id="patient_view_form" model="ir.ui.view"> <!--we are create a form views into this model (ir.ui.view)-->
		<field name="name">hospital.patient.form</field>  
		<field name="model">hospital.patient</field>   <!--we are going to create form view for this mode --><!--we can use this models fields inside the form tag-->
		<field name="arch" type="xml"> 

			<form string="hospital patient">  
				<sheet>
					<h1><field  name="name"/></h1>

					<group>
						<group>
							<field  name="name"/>
							<field  name="age"/>
						</group>
							
						<group>
							<field  name="gender"/>
						</group>
					</group>

					<notebook>
						<page string="Description">
							<field  name="description"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>  	
	</record>


	<record id="patient_view_tree" model="ir.ui.view">
		<field name="name">hospital.patient.tree</field>
		<field name="model">hospital.patient</field>
		<field name="arch" type="xml">
			<tree default_order="name desc">
				<field name="name"/>
				<field name="gender"/>
				<field name="age"/>
				<field name="description"/>
			</tree>
		</field>
	</record>


	<record id="patients_view_kanban" model="ir.ui.view">
            <field name="name">hospital.patient.kanban</field>
            <field name="model">hospital.patient</field>
            <field name='arch' type='xml'>
                <kanban>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <ul>
                                <li>Name:<field name="name"/></li>
                                <li>Description:<field name="description"/></li>
                                <li>Age:<field name="age"/></li>
                                <li>Gender:<field name="gender"/></li>
                            </ul>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


		<record id="course_view_search" model="ir.ui.view"> <!--we are create a form views into this model (ir.ui.view)-->
			<field name="name">hospital.patient.search</field>  
			<field name="model">hospital.patient</field>   
			<field name="arch" type="xml"> 

				<search string="patient">	
					 <field name="name"/>
					 <field name="description"/>

					 <separator/>

					 <filter string="Filter for male" name="male" domain="[('gender', '=', 'male')]"/>       <!--name is use for xpath  -->
					 <filter string="Filter for female" name="female" domain="[('gender', '=', 'female')]"/>
					 <filter string="Filter for other" name="other" domain="[('gender', '=', 'other')]"/>


					 <group expand="1" string="Group By">
					 	<filter string="gender" name="gender" context="{'group_by':'gender'}"/>
					 	<filter string="patient name" name="name" context="{'group_by':'name'}"/>	
					 </group>
				</search>

			</field> 
		</record>

</odoo>