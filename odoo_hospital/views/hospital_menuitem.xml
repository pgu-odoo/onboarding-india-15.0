        <record model="ir.actions.act_window" id="action_hospital_appointment">
            <field name="name">Appointment</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,kanban,form,cohort,gantt</field>
            <field name="context">{'hide_gender':1}</field> <!--used for default search but we can't used direct selection type field for that we have to used it with key value -->
            <!-- <field name="context">{'search_default_patient_name':1}</field> grup by feild not applicable-->
            <!-- <field name="context">{'search_default_female':1}</field> --> <!--if i add this field to here then this field taken as default due to interpreter read line by line , so its taken last context name-->
