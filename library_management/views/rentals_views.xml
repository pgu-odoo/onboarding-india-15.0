<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<record model="ir.ui.view" id="rental_view_form">
			<field name="name">library.rental.form</field>
			<field name="model">library.rental</field>
			<field name="arch" type="xml">
				<form string="Rental Form">
					<sheet>
						<h1><field name="name"/></h1>
						<group>
							<group>
								<field name="book_id"/>
							</group>
						</group>
						<notebook>
							<page string="Customers">
								<field name="customer_id"/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="rental_view_list">
			<field name="name">library.rental.list</field>
			<field name="model">library.rental</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="customer_id"/>
				</tree>
			</field>
		</record>
	</data>
</odoo>