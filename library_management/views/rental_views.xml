<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="rental_view_form">
			<field name="name">libray.rental.form</field>
			<field name="model">library.rental</field>
			<field name="arch" type="xml">
				<form string="Rental Form">
                    <sheet>
                            <h1><field name="name"/></h1>
                           <group>
                           		<group>
                           			<field name= "book_id"/>
                           		</group>
                           		<notebook>
                           			<page string="Customers">
                           				<field name='customer_ids'></field>
                           				<field name="name">Name</field>
                           			
                           			</page>
                           		</notebook>
                           </group> 
                    </sheet>
                </form>
			</field>
		</record>

		<record model="ir.ui.view" id="rental_view_list">
			<field name ="name">library.rental.list</field>
			<field name="model">library.rental</field>
			<field name="arch" type="xml">
				<tree string="Rental List ">
					<field name="name"/>
				</tree>
			</field>
		</record>
	</data>
</odoo>