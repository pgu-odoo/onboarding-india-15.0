<?xml version="1.0" encoding="utf-8"?> 
<odoo>
	<data>
		<record model="ir.ui.view" id="session_view_form">
			<field name="name">library.session.form</field>
			<field name="model">library.session</field>
			<field name="arch" type="xml">
				<form string="Session Form">
					 <sheet>
					 	<h1><field name="name"/></h1>
					 	<group>
					 		<group>
					 			<field name="book_id"/>
					 			<field name="isbn"/>
					 		</group>
					 		<group>
					 			<field name="start_date"/>
					 			<field name="duration"/>
					 			<field name="end_date"/>
					 		</group>
					 		<notebook>
					 			<page string="students">
					 				<field name="student_ids"/>
					 			</page>
					 		</notebook>
					 	</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="session_view_list">
			<field name="name">library.management.list</field>
			<field name="model">library.management</field>
			<field name="arch" type="xml">
				<tree string="Session List">
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="session_view_calendar">
			<field name="name">libray.session.calendar</field>
			<field name="model">library.session</field>
			<field name="arch" type="xml">
				<calendar string="session calendar"
					date_start="start_date"
					date_stop="end_date"
					mode="month">
				  <field name="name"/>
				  <!-- <field name="isbn"/> -->
				</calendar>
			</field>
		</record>
	</data>
</odoo>






