<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="group_vadilal_admin" model="res.groups">
		<field name="name"> Vadilal/ Admin </field>		
	</record>

	<record id="only_active_modify" model="ir.rule">
		<field name="name">Only Active Categories Can Be Modified</field>
		<field name="perm_read" eval="0"/>
		<field name="perm_write" eval="1"/>
		<field name="perm_create" eval="0"/>
		<field name="perm_unlink" eval="1"/>
		<field name="domain_force">[('active','=',True)]</field>
		<field name="model_id" ref="model_vadilal_categories"/>	
	</record>
</odoo>